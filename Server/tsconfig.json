{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"es6"
		],
		"types": [
			"reflect-metadata"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"src/*"
			]
		},
	},
	"include": [
		"src/**/*.ts",
		"tests/**/*.ts",
		"src/services/__tests__/UserService.integration.oy",
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}